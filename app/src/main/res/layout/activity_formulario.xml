<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:orientation="vertical"
    tools:context="com.critico.ticketsapp.Activitys.FormularioActivity">

    <EditText
        android:id="@+id/textNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese Nombre"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/txtFechaNac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Seleccione su Edad:"
        android:textSize="19dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spDia"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.37" />

        <Spinner
            android:id="@+id/spMes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3.31" />

        <Spinner
            android:id="@+id/spAÃ±o"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2.21" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Estado de Cliente:"
        android:textSize="19dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <Spinner
            android:id="@+id/spPrioridad"
            android:layout_width="251dp"
            android:layout_height="match_parent"
            android:layout_weight="0.32" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTRAR"/>

    </LinearLayout>

</LinearLayout>
